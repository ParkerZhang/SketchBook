    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch ModernConfig",
            "request": "launch",
            "mainClass": "com.example.MordenConfig",
            "vmArgs": "-Dapp.name=\"MordenConfig System Overrides\"",
            "projectName": "demo"
        },
        {
            "type": "java",
             "name": "Attach - Add Configuartion",
            "request": "attach",
            "hostName": "localhost",
            "port": "5005"
        },

        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Main",
            "request": "launch",
            "mainClass": "com.example.Main",
            "projectName": "demo"
        },
        {
            "type": "java",
            "name": "MordenConfig",
            "request": "launch",
            "mainClass": "com.example.MordenConfig",
            "projectName": "demo"
        },
        {
            "type": "java",
            "name": "Debug: Attach to Process",
            "request": "attach",
            "hostName": "localhost",
            "port": 5005
        },

	{
	    "type": "java",
	    "name": "Launch with Secrets",
	    "request": "launch"
	    "mainClass": "com.example.MordenConfig",
	    "vmArgs": [
		    "-Dapp.name=MyProject",
		    "-Ddb.secret=B64.U2VjcmV0UGFzc3dvcmQyMQ=="
	    ]
	}
    ]
